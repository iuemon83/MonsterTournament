@using MonsterTournament.Client.Models
<MudIcon Class="mr-2" Icon=@Icon.Icon Color=@Icon.Color />

@code {
    [Parameter]
    public BattleCardAttackType AttackType { get; set; }

    private (string Icon, Color Color) Icon => this.AttackType switch
    {
        BattleCardAttackType.Other => ("fas fa-question-circle", Color.Default),
        BattleCardAttackType.Attack => ("fas fa-hand-rock", Color.Info),
        BattleCardAttackType.Heal => ("fas fa-heart", Color.Success),
        BattleCardAttackType.Bouhatu => ("fas fa-burst", Color.Warning),
        BattleCardAttackType.ReAttack => ("fas fa-redo-alt", Color.Info),
        BattleCardAttackType.BattleState => ("fas fa-water", Color.Warning),
        BattleCardAttackType.Buff => ("fas fa-angle-double-up", Color.Success),
        BattleCardAttackType.Transform => ("fas fa-sync-alt", Color.Secondary),
        BattleCardAttackType.Special => ("fas fa-star", Color.Secondary),
        _ => ("", Color.Default),
    };
}
